<% title %Q{Sign in to your "#{configatron.app_name}" account} %>

Not a member? <%= link_to 'Sign up here!', new_registration_path(resource_name) %>
<br /><br/>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => :session_new}) do |form| %>
  <fieldset class="inputs">
    <%= form.input :email, :required => true %>
    <%= form.input :password, :required => true %>

    <div class="input">
      <% if devise_mapping.recoverable? %>
        <%= link_to 'Forgot your password?', new_password_path(resource_name) %>
        <br/>
      <% end %>

      <% if devise_mapping.confirmable? %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
        <br/>
      <% end %>

      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
        <br/>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <%= form.input :remember_me, :as => :boolean, :label => 'Remember my login on this computer' %>
    <% end %>
  </fieldset>
  <%= form.button :submit, 'Sign in' %>
<% end %>

<%= render :partial => 'devise/shared/oauth' %>