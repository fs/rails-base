<% title 'Forgot your password?' %>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |form| %>
  <%= field_set_tag nil, :class => :inputs do %>
    <%= form.input :email, :required => true %>
  <% end %>
  
  <%= form.button :submit, 'Send me reset password instructions' %>
<% end %>